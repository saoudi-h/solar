{
    "extends": "@solar/tsconfig/base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "src",
        "rootDir": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src/**/*", "./src/**/*.json", "vite.config.ts","types"],
    "exclude": ["dist", "build", "node_modules", ".vscode", ".turbo"]
}
